@model IEnumerable<ventaapp.Models.Producto>

@{
    ViewData["Title"] = "Gestión de Productos";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="bi bi-box-seam-fill"></i> Gestión de Productos</h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nuevo Producto
                </a>
            </div>
        </div>
    </div>

    <!-- Tarjetas de estadísticas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h6 class="card-title">Total Productos</h6>
                    <h2>@ViewBag.TotalProductos</h2>
                    <small>En el sistema</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h6 class="card-title">Productos Activos</h6>
                    <h2>@ViewBag.ProductosActivos</h2>
                    <small>Disponibles para venta</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h6 class="card-title">Productos Inactivos</h6>
                    <h2>@ViewBag.ProductosInactivos</h2>
                    <small>Descontinuados</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h6 class="card-title">Valor Inventario</h6>
                    <h2>$@ViewBag.ValorInventario.ToString("N2")</h2>
                    <small>Costo total</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Mensajes de feedback -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle-fill"></i> @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros y búsqueda -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Buscar</label>
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                               class="form-control" placeholder="Nombre, código o descripción...">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Categoría</label>
                        <select name="categoria" class="form-select">
                            <option value="">Todas</option>
                            @if (ViewBag.Categorias != null)
                            {
                                @foreach (var cat in ViewBag.Categorias)
                                {
                                    <option value="@cat" selected="@(ViewData["CategoriaFilter"]?.ToString() == cat)">@cat</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Estado</label>
                        <select name="estado" class="form-select">
                            <option value="">Todos</option>
                            <option value="Activo" selected="@(ViewData["EstadoFilter"]?.ToString() == "Activo")">Activo</option>
                            <option value="Inactivo" selected="@(ViewData["EstadoFilter"]?.ToString() == "Inactivo")">Inactivo</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary me-2">
                            <i class="bi bi-x-circle"></i> Limpiar
                        </a>
                        <a asp-action="ExportarExcel" class="btn btn-success">
                            <i class="bi bi-file-excel"></i>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla de productos -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Código</th>
                            <th>Producto</th>
                            <th>Categoría</th>
                            <th class="text-end">P. Compra</th>
                            <th class="text-end">P. Venta</th>
                            <th class="text-center">Margen</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var producto in Model)
                            {
                                <tr>
                                    <td><code>@producto.CodigoProducto</code></td>
                                    <td>
                                        <strong>@producto.NombreProducto</strong>
                                        @if (!string.IsNullOrEmpty(producto.Descripcion))
                                        {
                                            <br><small class="text-muted">@(producto.Descripcion.Length > 50 ? producto.Descripcion.Substring(0, 50) + "..." : producto.Descripcion)</small>
                                        }
                                    </td>
                                    <td><span class="badge bg-secondary">@producto.Categoria</span></td>
                                    <td class="text-end">$@producto.PrecioCompra.ToString("N2")</td>
                                    <td class="text-end"><strong>$@producto.PrecioVenta.ToString("N2")</strong></td>
                                    <td class="text-center">
                                        @if (producto.MargenGanancia > 30)
                                        {
                                            <span class="badge bg-success">@producto.MargenGanancia.ToString("N1")%</span>
                                        }
                                        else if (producto.MargenGanancia > 15)
                                        {
                                            <span class="badge bg-warning">@producto.MargenGanancia.ToString("N1")%</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@producto.MargenGanancia.ToString("N1")%</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (producto.Estado == "Activo")
                                        {
                                            <span class="badge bg-success">@producto.Estado</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@producto.Estado</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@producto.IdProducto"
                                               class="btn btn-sm btn-info" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@producto.IdProducto"
                                               class="btn btn-sm btn-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="CambiarEstado" asp-route-id="@producto.IdProducto"
                                               class="btn btn-sm btn-@(producto.Estado == "Activo" ? "secondary" : "success")"
                                               title="@(producto.Estado == "Activo" ? "Desactivar" : "Activar")">
                                                <i class="bi bi-power"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@producto.IdProducto"
                                               class="btn btn-sm btn-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4">
                                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                                    <p class="text-muted mt-2">No se encontraron productos.</p>
                                    <a asp-action="Create" class="btn btn-primary">
                                        <i class="bi bi-plus-circle"></i> Crear Primer Producto
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
