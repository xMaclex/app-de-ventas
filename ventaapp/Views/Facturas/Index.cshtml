@model IEnumerable<ventaapp.Models.Factura>

@{
    ViewData["Title"] = "Gestión de Facturas";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="bi bi-receipt"></i> Gestión de Facturas</h2>
                <div>
                    <a asp-action="GestionNCF" class="btn btn-warning">
                        <i class="bi bi-gear"></i> Gestión NCF
                    </a>
                    <a asp-action="Reporte607" class="btn btn-info">
                        <i class="bi bi-file-earmark-bar-graph"></i> Reporte 607
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- KPIs -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body text-center">
                    <h6 class="card-title">Facturas Hoy</h6>
                    <h2>@ViewBag.FacturasHoy</h2>
                    <small>Emitidas</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body text-center">
                    <h6 class="card-title">Facturas del Mes</h6>
                    <h2>@ViewBag.FacturasMes</h2>
                    <small>Total mensual</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body text-center">
                    <h6 class="card-title">Monto Total Mes</h6>
                    <h2>$@ViewBag.MontoTotalMes.ToString("N0")</h2>
                    <small>Facturación</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body text-center">
                    <h6 class="card-title">ITBIS del Mes</h6>
                    <h2>$@ViewBag.ItbisMes.ToString("N0")</h2>
                    <small>Impuesto recaudado</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Mensajes -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show">
            <i class="bi bi-info-circle-fill"></i> @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-header bg-dark text-white">
            <h6 class="mb-0"><i class="bi bi-funnel"></i> Filtros de Búsqueda</h6>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <div class="col-md-2">
                        <label class="form-label">Fecha Desde</label>
                        <input type="date" name="fechaDesde" class="form-control" 
                               value="@ViewData["FechaDesde"]">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Fecha Hasta</label>
                        <input type="date" name="fechaHasta" class="form-control" 
                               value="@ViewData["FechaHasta"]">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Cliente</label>
                        <select name="idCliente" class="form-select">
                            <option value="">Todos</option>
                            @if (ViewBag.Clientes != null)
                            {
                                @foreach (var cliente in ViewBag.Clientes)
                                {
                                    <option value="@cliente.IdCliente" 
                                            selected="@(ViewData["IdCliente"]?.ToString() == cliente.IdCliente.ToString())">
                                        @cliente.NombreCompleto
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Tipo NCF</label>
                        <select name="tipoComprobante" class="form-select">
                            <option value="">Todos</option>
                            <option value="B01" selected="@(ViewData["TipoComprobante"]?.ToString() == "B01")">B01 - Crédito Fiscal</option>
                            <option value="B02" selected="@(ViewData["TipoComprobante"]?.ToString() == "B02")">B02 - Consumidor Final</option>
                            <option value="B14" selected="@(ViewData["TipoComprobante"]?.ToString() == "B14")">B14 - Régimen Especial</option>
                            <option value="B15" selected="@(ViewData["TipoComprobante"]?.ToString() == "B15")">B15 - Gubernamental</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Estado</label>
                        <select name="estado" class="form-select">
                            <option value="">Todos</option>
                            <option value="Activa" selected="@(ViewData["Estado"]?.ToString() == "Activa")">Activa</option>
                            <option value="Anulada" selected="@(ViewData["Estado"]?.ToString() == "Anulada")">Anulada</option>
                        </select>
                    </div>
                    <div class="col-md-1 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla de Facturas -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Número Factura</th>
                            <th>Fecha</th>
                            <th>Cliente</th>
                            <th>NCF</th>
                            <th>Tipo</th>
                            <th class="text-end">Monto</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var factura in Model)
                            {
                                <tr>
                                    <td><strong>#@factura.IdFactura</strong></td>
                                    <td><code>@factura.NumeroFactura</code></td>
                                    <td>@factura.FechaEmision.ToString("dd/MM/yyyy")</td>
                                    <td>@factura.Cliente.NombreCompleto</td>
                                    <td><small>@factura.Ncf</small></td>
                                    <td>
                                        <span class="badge bg-primary">@factura.TipoComprobanteFiscal</span>
                                    </td>
                                    <td class="text-end">
                                        <strong>$@factura.MontoTotal.ToString("N2")</strong>
                                    </td>
                                    <td>
                                        @if (factura.Estado == "Activa")
                                        {
                                            <span class="badge bg-success">@factura.Estado</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@factura.Estado</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@factura.IdFactura" 
                                           class="btn btn-sm btn-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="DescargarPDF" asp-route-id="@factura.IdFactura" 
                                           class="btn btn-sm btn-secondary" title="Descargar PDF">
                                            <i class="bi bi-file-pdf"></i>
                                        </a>
                                        @if (factura.Estado == "Activa")
                                        {
                                            <button type="button" class="btn btn-sm btn-danger" 
                                                    onclick="anularFactura(@factura.IdFactura)" title="Anular">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center py-4">
                                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                                    <p class="text-muted mt-2">No se encontraron facturas.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal para anular factura -->
<div class="modal fade" id="modalAnular" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Anular Factura</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="formAnular" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        Esta acción no se puede deshacer. La factura será anulada permanentemente.
                    </div>
                    <div class="mb-3">
                        <label class="form-label"><strong>Motivo de anulación:</strong></label>
                        <textarea name="motivoAnulacion" class="form-control" rows="3" required 
                                  placeholder="Especifique el motivo de la anulación..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Confirmar Anulación</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <script>
        function anularFactura(idFactura) {
            const modal = new bootstrap.Modal(document.getElementById('modalAnular'));
            const form = document.getElementById('formAnular');
            form.action = `/Facturas/Anular/${idFactura}`;
            modal.show();
        }
    </script>
}
