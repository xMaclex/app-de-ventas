@model ventaapp.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Producto</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" id="formProducto">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <input type="hidden" asp-for="IdProducto" />

                        <div class="row">
                            <!-- Columna Izquierda -->
                            <div class="col-md-6">
                                <h5 class="text-primary mb-3"><i class="bi bi-info-circle"></i> Información Básica</h5>

                                <div class="mb-3">
                                    <label asp-for="CodigoProducto" class="form-label"></label>
                                    <input asp-for="CodigoProducto" class="form-control" />
                                    <span asp-validation-for="CodigoProducto" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="NombreProducto" class="form-label"></label>
                                    <input asp-for="NombreProducto" class="form-control" />
                                    <span asp-validation-for="NombreProducto" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Descripcion" class="form-label"></label>
                                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Categoria" class="form-label"></label>
                                    <input asp-for="Categoria" class="form-control" list="categoriasList" />
                                    <datalist id="categoriasList">

                                        <option value="Electrónica">Electrónica</option>
                                        <option value="Alimentos">Alimentos</option>
                                        <option value="Bebidas">Bebidas</option>
                                        <option value="Ropa">Ropa</option>
                                        <option value="Accesorios">Accesorios</option>
                                        <option value="Hogar">Hogar</option>
                                        <option value="Oficina">Oficina</option>
                                        <option value="Otros">Otros</option>
                                        
                                    </datalist>
                                    <span asp-validation-for="Categoria" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Estado" class="form-label"></label>
                                    <select asp-for="Estado" class="form-select">
                                        <option value="Activo">Activo</option>
                                        <option value="Inactivo">Inactivo</option>
                                    </select>
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Columna Derecha -->
                            <div class="col-md-6">
                                <h5 class="text-success mb-3"><i class="bi bi-currency-dollar"></i> Información de Precios</h5>

                                <div class="mb-3">
                                    <label asp-for="PrecioCompra" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="PrecioCompra" class="form-control" type="number" step="0.01"
                                               id="precioCompra" />
                                    </div>
                                    <span asp-validation-for="PrecioCompra" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="PrecioVenta" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="PrecioVenta" class="form-control" type="number" step="0.01"
                                               id="precioVenta" />
                                    </div>
                                    <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Impuesto" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Impuesto" class="form-control" type="number" step="0.01"
                                               id="impuesto" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                    <span asp-validation-for="Impuesto" class="text-danger"></span>
                                    <small class="text-muted">ITBIS en República Dominicana: 18%</small>
                                </div>

                                <!-- Tarjeta de Cálculos -->
                                <div class="card bg-light mt-4">
                                    <div class="card-body">
                                        <h6 class="card-title"><i class="bi bi-calculator"></i> Cálculos Automáticos</h6>
                                        <hr>
                                        <div class="row mb-2">
                                            <div class="col-6"><strong>Utilidad:</strong></div>
                                            <div class="col-6 text-end" id="utilidad">$0.00</div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-6"><strong>Margen:</strong></div>
                                            <div class="col-6 text-end" id="margen">0%</div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-6"><strong>ITBIS:</strong></div>
                                            <div class="col-6 text-end" id="montoImpuesto">$0.00</div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-6"><strong>Precio Final:</strong></div>
                                            <div class="col-6 text-end"><h5 class="text-success mb-0" id="precioFinal">$0.00</h5></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info del producto -->
            <div class="card mt-3">
                <div class="card-body">
                    <h6><i class="bi bi-info-circle"></i> Información:</h6>
                    <p class="mb-0">Está editando el producto con ID: <strong>@Model.IdProducto</strong></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <script>
        // Función para calcular valores automáticamente
        function calcularValores() {
            const precioCompra = parseFloat(document.getElementById('precioCompra').value) || 0;
            const precioVenta = parseFloat(document.getElementById('precioVenta').value) || 0;
            const impuesto = parseFloat(document.getElementById('impuesto').value) || 0;

            // Calcular utilidad
            const utilidad = precioVenta - precioCompra;
            document.getElementById('utilidad').textContent = '$' + utilidad.toFixed(2);

            // Calcular margen
            const margen = precioVenta > 0 ? ((utilidad / precioVenta) * 100) : 0;
            const margenElement = document.getElementById('margen');
            margenElement.textContent = margen.toFixed(1) + '%';
            
            // Cambiar color según el margen
            if (margen > 30) {
                margenElement.className = 'text-success';
            } else if (margen > 15) {
                margenElement.className = 'text-warning';
            } else {
                margenElement.className = 'text-danger';
            }

            // Calcular impuesto
            const montoImpuesto = precioVenta * (impuesto / 100);
            document.getElementById('montoImpuesto').textContent = '$' + montoImpuesto.toFixed(2);

            // Calcular precio final
            const precioFinal = precioVenta + montoImpuesto;
            document.getElementById('precioFinal').textContent = '$' + precioFinal.toFixed(2);
        }

        // Agregar eventos a los campos
        document.getElementById('precioCompra').addEventListener('input', calcularValores);
        document.getElementById('precioVenta').addEventListener('input', calcularValores);
        document.getElementById('impuesto').addEventListener('input', calcularValores);

        // Calcular al cargar la página
        document.addEventListener('DOMContentLoaded', calcularValores);
    </script>
}
