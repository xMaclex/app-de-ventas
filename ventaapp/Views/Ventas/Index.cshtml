@model IEnumerable<ventaapp.Models.Venta>

@{
    ViewData["Title"] = "Historial de Ventas";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="bi bi-clock-history"></i> Historial de Ventas</h2>
                <div>
                    <a asp-action="PuntoVenta" class="btn btn-primary btn-lg">
                        <i class="bi bi-cart-plus"></i> Nueva Venta
                    </a>
                    <a asp-action="Reportes" class="btn btn-info">
                        <i class="bi bi-graph-up"></i> Reportes
                    </a>
                    <a asp-action="CierreCaja" class="btn btn-warning">
                        <i class="bi bi-cash-stack"></i> Cierre de Caja
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Tarjetas de estadísticas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h6 class="card-title">Ventas Hoy</h6>
                    <h2>@ViewBag.VentasHoy</h2>
                    <small>Transacciones</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h6 class="card-title">Total Hoy</h6>
                    <h2>$@ViewBag.TotalHoy.ToString("N2")</h2>
                    <small>Ingresos del día</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h6 class="card-title">Ventas del Mes</h6>
                    <h2>@ViewBag.VentasMes</h2>
                    <small>Transacciones</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h6 class="card-title">Total del Mes</h6>
                    <h2>$@ViewBag.TotalMes.ToString("N2")</h2>
                    <small>Ingresos mensuales</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Mensajes -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-header bg-dark text-white">
            <h6 class="mb-0"><i class="bi bi-funnel"></i> Filtros de Búsqueda</h6>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Fecha Desde</label>
                        <input type="date" name="fechaDesde" class="form-control" 
                               value="@ViewData["FechaDesde"]">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Fecha Hasta</label>
                        <input type="date" name="fechaHasta" class="form-control" 
                               value="@ViewData["FechaHasta"]">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Cliente</label>
                        <select name="idCliente" class="form-select">
                            <option value="">Todos</option>
                            @if (ViewBag.Clientes != null)
                            {
                                @foreach (var cliente in ViewBag.Clientes)
                                {
                                    <option value="@cliente.IdCliente" 
                                            selected="@(ViewData["IdCliente"]?.ToString() == cliente.IdCliente.ToString())">
                                        @cliente.NombreCompleto
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Método de Pago</label>
                        <select name="metodoPago" class="form-select">
                            <option value="">Todos</option>
                            <option value="Efectivo" selected="@(ViewData["MetodoPago"]?.ToString() == "Efectivo")">Efectivo</option>
                            <option value="Tarjeta" selected="@(ViewData["MetodoPago"]?.ToString() == "Tarjeta")">Tarjeta</option>
                            <option value="Transferencia" selected="@(ViewData["MetodoPago"]?.ToString() == "Transferencia")">Transferencia</option>
                            <option value="Cheque" selected="@(ViewData["MetodoPago"]?.ToString() == "Cheque")">Cheque</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Estado</label>
                        <select name="estado" class="form-select">
                            <option value="">Todos</option>
                            <option value="Completada" selected="@(ViewData["Estado"]?.ToString() == "Completada")">Completada</option>
                            <option value="Anulada" selected="@(ViewData["Estado"]?.ToString() == "Anulada")">Anulada</option>
                            <option value="Pendiente" selected="@(ViewData["Estado"]?.ToString() == "Pendiente")">Pendiente</option>
                        </select>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 text-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Limpiar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla de ventas -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Fecha</th>
                            <th>Cliente</th>
                            <th>Comprobante</th>
                            <th class="text-end">Total</th>
                            <th>Método Pago</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var venta in Model)
                            {
                                <tr>
                                    <td><strong>#@venta.IdVenta</strong></td>
                                    <td>@venta.Fechaventa.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@venta.Cliente.NombreCompleto</td>
                                    <td><code>@venta.NumeroComprobante</code></td>
                                    <td class="text-end"><strong>$@venta.Total.ToString("N2")</strong></td>
                                    <td>
                                        <span class="badge bg-info">@venta.MetodoPago</span>
                                    </td>
                                    <td>
                                        @if (venta.Estado == "Completada")
                                        {
                                            <span class="badge bg-success">@venta.Estado</span>
                                        }
                                        else if (venta.Estado == "Anulada")
                                        {
                                            <span class="badge bg-danger">@venta.Estado</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">@venta.Estado</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@venta.IdVenta" 
                                           class="btn btn-sm btn-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (venta.Estado == "Completada")
                                        {
                                            <button type="button" class="btn btn-sm btn-danger" 
                                                    onclick="anularVenta(@venta.IdVenta)" title="Anular">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4">
                                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                                    <p class="text-muted mt-2">No se encontraron ventas.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal para anular venta -->
<div class="modal fade" id="modalAnular" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Anular Venta</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="formAnular" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        Esta acción no se puede deshacer. La venta será anulada permanentemente.
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Motivo de anulación:</label>
                        <textarea name="motivoAnulacion" class="form-control" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Confirmar Anulación</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <script>
        function anularVenta(idVenta) {
            const modal = new bootstrap.Modal(document.getElementById('modalAnular'));
            const form = document.getElementById('formAnular');
            form.action = `/Ventas/Anular/${idVenta}`;
            modal.show();
        }
    </script>
}
