@model ventaapp.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirmar Eliminación</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.TieneFacturas)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>¡Atención!</strong> Este producto tiene facturas asociadas y no puede ser eliminado.
                            Debe eliminar primero todas las facturas relacionadas o considere desactivar el producto en su lugar.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>¡Advertencia!</strong> Esta acción no se puede deshacer.
                            ¿Está seguro de que desea eliminar este producto?
                        </div>
                    }

                    <h5 class="mb-4">Información del Producto:</h5>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-5">ID Producto:</dt>
                                        <dd class="col-sm-7">@Model.IdProducto</dd>

                                        <dt class="col-sm-5">Código:</dt>
                                        <dd class="col-sm-7"><code>@Model.CodigoProducto</code></dd>

                                        <dt class="col-sm-5">Nombre:</dt>
                                        <dd class="col-sm-7">
                                            <strong class="text-primary">@Model.NombreProducto</strong>
                                        </dd>

                                        <dt class="col-sm-5">Categoría:</dt>
                                        <dd class="col-sm-7">
                                            <span class="badge bg-secondary">@Model.Categoria</span>
                                        </dd>

                                        <dt class="col-sm-5">Estado:</dt>
                                        <dd class="col-sm-7">
                                            @if (Model.Estado == "Activo")
                                            {
                                                <span class="badge bg-success">@Model.Estado</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@Model.Estado</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-6">Precio Compra:</dt>
                                        <dd class="col-sm-6 text-end">$@Model.PrecioCompra.ToString("N2")</dd>

                                        <dt class="col-sm-6">Precio Venta:</dt>
                                        <dd class="col-sm-6 text-end">
                                            <strong class="text-success">$@Model.PrecioVenta.ToString("N2")</strong>
                                        </dd>

                                        <dt class="col-sm-6">Utilidad:</dt>
                                        <dd class="col-sm-6 text-end">$@Model.Utilidad.ToString("N2")</dd>

                                        <dt class="col-sm-6">Margen:</dt>
                                        <dd class="col-sm-6 text-end">
                                            @if (Model.MargenGanancia > 30)
                                            {
                                                <span class="badge bg-success">@Model.MargenGanancia.ToString("N1")%</span>
                                            }
                                            else if (Model.MargenGanancia > 15)
                                            {
                                                <span class="badge bg-warning">@Model.MargenGanancia.ToString("N1")%</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">@Model.MargenGanancia.ToString("N1")%</span>
                                            }
                                        </dd>

                                        <dt class="col-sm-6">Impuesto:</dt>
                                        <dd class="col-sm-6 text-end">@Model.Impuesto.ToString("N2")%</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Descripcion))
                    {
                        <div class="mb-3">
                            <strong>Descripción:</strong>
                            <p class="text-muted mb-0">@Model.Descripcion</p>
                        </div>
                    }

                    <hr class="my-4">

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>

                        @if (!ViewBag.TieneFacturas)
                        {
                            <form asp-action="Delete" method="post">
                                <input type="hidden" asp-for="IdProducto" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Confirmar Eliminación
                                </button>
                            </form>
                        }
                        else
                        {
                            <button type="button" class="btn btn-danger" disabled>
                                <i class="bi bi-trash"></i> No se puede eliminar
                            </button>
                        }
                    </div>
                </div>
            </div>

            <!-- Información adicional -->
            @if (ViewBag.TieneFacturas)
            {
                <div class="card mt-3 border-warning">
                    <div class="card-body">
                        <h6 class="text-warning"><i class="bi bi-info-circle"></i> ¿Por qué no puedo eliminar?</h6>
                        <p>
                            Este producto tiene registros de facturas asociados. Por integridad de datos,
                            debe eliminar primero todas las facturas relacionadas con este producto antes
                            de poder eliminarlo del sistema.
                        </p>
                        <p class="mb-0">
                            <strong>Alternativa recomendada:</strong> En lugar de eliminar, puede cambiar el estado
                            del producto a "Inactivo". Esto mantendrá el historial de ventas y evitará que
                            el producto aparezca en nuevas transacciones.
                        </p>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <a asp-action="CambiarEstado" asp-route-id="@Model.IdProducto" class="btn btn-warning">
                        <i class="bi bi-power"></i> Desactivar Producto en su Lugar
                    </a>
                </div>
            }
            else
            {
                <div class="card mt-3 border-info">
                    <div class="card-body">
                        <h6 class="text-info"><i class="bi bi-lightbulb"></i> Sugerencia:</h6>
                        <p class="mb-0">
                            Si solo desea ocultar este producto temporalmente, considere cambiar su estado
                            a "Inactivo" en lugar de eliminarlo permanentemente. Esto preservará el historial
                            y permitirá reactivarlo en el futuro si es necesario.
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
