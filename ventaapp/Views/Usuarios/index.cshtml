@model IEnumerable<ventaapp.Models.Usuarios>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container-fluid px-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 mt-2">
        <div>
            <h2 class="fw-bold mb-0" style="color:#1e2a3a;">
                <i class="bi bi-people-fill me-2" style="color:#4f8ef7;"></i>Usuarios del Sistema
            </h2>
            <small class="text-muted">Administración y gestión de cuentas de usuario</small>
        </div>
    </div>

    <!-- Alertas -->
    @if (TempData["Exito"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @Html.Raw(TempData["Exito"])
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Tabla -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="tablaUsuarios">
                    <thead style="background:#f0f4fb;">
                        <tr>
                            <th class="px-4 py-3" style="width:60px;"></th>
                            <th class="py-3">Usuario</th>
                            <th class="py-3">Documento</th>
                            <th class="py-3">Teléfonos</th>
                            <th class="py-3">Correo</th>
                            <th class="py-3">Último Acceso</th>
                            <th class="py-3 text-center">Estado</th>
                            <th class="py-3 text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model)
                        {
                            <tr>
                                <td class="px-4">
                                    <img src="@Url.Action("FotoPerfil", "Usuarios", new { id = usuario.IdUsuario })"
                                         class="rounded-circle shadow-sm"
                                         style="width:44px;height:44px;object-fit:cover;border:2px solid #e2e8f4;"
                                         alt="@usuario.NombreCompleto" />
                                </td>
                                <td>
                                    <div class="fw-semibold" style="color:#1e2a3a;">@usuario.NombreCompleto</div>
                                    <small class="text-muted">
                                        <i class="bi bi-at me-1"></i>@usuario.Username
                                    </small>
                                </td>
                                <td>
                                    <small class="text-muted d-block">@usuario.TipoDocumento</small>
                                    <span>@usuario.NumeroDocumento</span>
                                </td>
                                <td>
                                    <div><i class="bi bi-telephone me-1 text-muted"></i>@usuario.NumeroTelefono</div>
                                    <div><i class="bi bi-phone me-1 text-muted"></i>@usuario.NumeroCelular</div>
                                </td>
                                <td>
                                    <span class="text-truncate d-inline-block" style="max-width:180px;" title="@usuario.Email">
                                        @usuario.Email
                                    </span>
                                </td>
                                <td>
                                    @if (usuario.UltimoAcceso.HasValue)
                                    {
                                        <span title="@usuario.UltimoAcceso.Value.ToString("dd/MM/yyyy HH:mm")">
                                            @usuario.UltimoAcceso.Value.ToString("dd/MM/yyyy")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Nunca</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (usuario.EstaBloqueado)
                                    {
                                        <span class="badge rounded-pill px-3 py-2" style="background:#fff0f0;color:#d9534f;font-size:.78rem;">
                                            <i class="bi bi-lock-fill me-1"></i>Bloqueado
                                        </span>
                                    }
                                    else if (usuario.Estado == "Activo")
                                    {
                                        <span class="badge rounded-pill px-3 py-2" style="background:#edfaf3;color:#27ae60;font-size:.78rem;">
                                            <i class="bi bi-check-circle-fill me-1"></i>Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill px-3 py-2" style="background:#f5f5f5;color:#888;font-size:.78rem;">
                                            <i class="bi bi-dash-circle me-1"></i>Inactivo
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Editar" asp-route-id="@usuario.IdUsuario"
                                       class="btn btn-sm btn-outline-primary rounded-pill px-3"
                                       title="Editar usuario">
                                        <i class="bi bi-pencil me-1"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@usuario.IdUsuario"
                                       class="btn btn-sm btn-outline-danger rounded-pill px-3"
                                       title="Eliminar usuario">
                                        <i class="bi bi-trash me-1"></i>
                                    </a>
                                </td>

                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5 text-muted">
                                    <i class="bi bi-people fs-1 d-block mb-2 opacity-25"></i>
                                    No hay usuarios registrados.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-top-0 px-4 py-2">
            <small class="text-muted">Total: <strong>@Model.Count()</strong> usuario(s)</small>
        </div>
    </div>
</div>
