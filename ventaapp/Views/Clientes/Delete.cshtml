@model ventaapp.Models.Clientes

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirmar Eliminación</h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.TieneVentas)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>¡Atención!</strong> Este cliente tiene ventas asociadas y no puede ser eliminado.
                            Debe eliminar primero todas las ventas relacionadas.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>¡Advertencia!</strong> Esta acción no se puede deshacer. 
                            ¿Está seguro de que desea eliminar este cliente?
                        </div>
                    }

                    <h5 class="mb-4">Información del Cliente:</h5>

                    <dl class="row">
                        <dt class="col-sm-4">ID Cliente:</dt>
                        <dd class="col-sm-8">@Model.IdCliente</dd>

                        <dt class="col-sm-4">Nombre Completo:</dt>
                        <dd class="col-sm-8">
                            <strong class="text-primary">@Model.NombreCompleto</strong>
                        </dd>

                        <dt class="col-sm-4">Tipo de Documento:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">@Model.TipoDocumento</span>
                        </dd>

                        <dt class="col-sm-4">Número de Documento:</dt>
                        <dd class="col-sm-8">@Model.NumeroDocumento</dd>

                        <dt class="col-sm-4">Correo Electrónico:</dt>
                        <dd class="col-sm-8">@Model.CorreoElectronico</dd>
                    </dl>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        
                        @if (!ViewBag.TieneVentas)
                        {
                            <form asp-action="Delete" method="post">
                                <input type="hidden" asp-for="IdCliente" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Confirmar Eliminación
                                </button>
                            </form>
                        }
                        else
                        {
                            <button type="button" class="btn btn-danger" disabled>
                                <i class="bi bi-trash"></i> No se puede eliminar
                            </button>
                        }
                    </div>
                </div>
            </div>

            <!-- Información adicional -->
            @if (ViewBag.TieneVentas)
            {
                <div class="card mt-3 border-warning">
                    <div class="card-body">
                        <h6 class="text-warning"><i class="bi bi-info-circle"></i> ¿Por qué no puedo eliminar?</h6>
                        <p class="mb-0">
                            Este cliente tiene registros de ventas asociados. Por integridad de datos,
                            debe eliminar primero todas las ventas relacionadas con este cliente antes
                            de poder eliminarlo del sistema.
                        </p>
                    </div>
                </div>
            }
            else
            {
                <div class="card mt-3 border-info">
                    <div class="card-body">
                        <h6 class="text-info"><i class="bi bi-lightbulb"></i> Alternativa:</h6>
                        <p class="mb-0">
                            Si solo desea ocultar este cliente temporalmente, considere implementar
                            un estado "Inactivo" en lugar de eliminarlo permanentemente.
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
